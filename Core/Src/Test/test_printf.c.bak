#include "dri_usart.h"
#include "int_key.h"
#include "int_led.h"
#include "logger.h"
#include "retarget.h"
#include "systick.h"

int main(void) {
    systick_config();
    dri_usart0_init();
    retarget_init(USART0);

    char buffer[64];
    uint8_t data[] = {0x11, 0x22, 0x33};
    while (1) {
        scanf("%s", buffer);
        printf("echo => %s", buffer);
        LOG_INFO("info msg => %s", buffer);
        LOG_DEBUG("debug msg => %s", buffer);
        LOG_ERROR("error msg => %s", buffer);
        LOG_ASSERT(1 == 2);
        LOG_DUMP("dump msg => %s", data, sizeof(data), "data");
    }
}